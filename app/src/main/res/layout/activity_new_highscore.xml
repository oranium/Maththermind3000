<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190.0dp"
    android:layout_marginVertical="200.0dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    tools:context="com.example.aron.maththermind.NewHighscore">

    <TextView
        android:id="@+id/txtView_enterNewHighscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10.0dp"
        android:gravity="center"
        android:text="Enter your name to save your highscore."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19.0dp" />

    <EditText
        android:id="@+id/etEnterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView_score_name"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:selectAllOnFocus="true"
        android:hint="enter your name"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/btn_saveHighscore"
        android:layout_width="100.0dp"
        android:layout_height="50.0dp"
        android:layout_gravity="center"
        android:text="Save" />
</LinearLayout>
